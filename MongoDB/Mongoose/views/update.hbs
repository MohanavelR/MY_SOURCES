<h1 class="text-center">Update Employee Details</h1>
<div class="d-flex justify-content-center">
        <form class="mt-4" method="post" action="/update_process/?edit_id={{user._id}}">
          <div class="d-flex gap-3">
          <div class="mb-3">
            <label for="recipient-name" class="col-form-label">Name</label>
            <input value="{{user.name}}" name="name" type="text" class="form-control" id="recipient-name">
          </div>
          <div class="mb-3">
            <label for="recipient-name" class="col-form-label">Age</label>
            <input value="{{user.age}}" name="age" type="number" class="form-control" id="recipient-name">
          </div>
          </div>
          <div class="mb-3">
            <label for="recipient-name" class="col-form-label">Address</label>
            <input value="{{user.address}}" name="address" type="text" class="form-control" id="recipient-name">
          </div>
        
          <div class="mb-3">
            <label for="recipient-name" class="col-form-label">Email</label>
            <input value="{{user.email}}" name="email" type="text" class="form-control" id="recipient-name">
          </div>
        
            <div class="mb-3">
            <label for="recipient-name" class="col-form-label">Phone</label>
            <input value="{{user.phone}}" name="phone" type="text" class="form-control" id="recipient-name">
          </div>
          <div class="d-flex justify-content-center align-items-center col-12">
        <button type="submit" class="btn btn-primary col-6">Save</button> 
          </div>
        </form>
</div>
    

